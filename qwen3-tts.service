[Unit]
Description=Qwen3-TTS Server
After=network.target

[Service]
Type=simple
User=aialfred
WorkingDirectory=/home/aialfred/qwen3-tts
Environment="PATH=/home/aialfred/qwen3-tts/venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="CUDA_VISIBLE_DEVICES=0"
ExecStart=/home/aialfred/qwen3-tts/venv/bin/python -m uvicorn server:app --host 0.0.0.0 --port 7860
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
